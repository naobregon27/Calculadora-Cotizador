<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/header') %>
    <title>Document</title>
</head>

<body>

  <%- include('partials/navigation') %>

    <div class="container p-4">
      <div class="row">

        <%if (comuna.length> 0) {%>

          <% comuna.forEach(function(comun) { %>
            <div class="col-md-4">
              <div class="card bg-dark">
                <div class="card-header text-white d-flex justify-content-between align-items-center">
                 <h5> <%= comun.Comuna %> </h5>
                    <a href="/delete/<%= comun.id %>" class="btn btn-danger btn-sm">
                      Delete
                    </a>
                </div>
               
                <div class="card-body text-light">
                  <h6>-Generación Kwh Kwp x Año</h6>
                  <%= comun.GeneraciónKwhKwpAño %>
                </div>
                <div class="card-body text-light">
                  <h6>-Costo Combustible Mas Peaje</h6>
                  <%= comun.CostoCombustibleMasPeaje %>
                </div>
                <div class="card-body text-light">
                  <h6>-Valor Venta Energía</h6>
                  <%= comun.ValorVentaEnergía %>
                </div>
              </div>
            </div>
            <%})%>

              <%} else {%>
                <div class="card card-body text-center">
                  <p>No Books yet. <a href="/new-entry">Add A New One</a></p>
                </div>
                <%}%>
      </div>
    </div>

</body>

</html>